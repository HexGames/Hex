# C# code style: require explicit type in object creation
dotnet_style_prefer_explicit_type_in_object_creation = true:suggestion

# Naming rule for private fields: _PascalCase
dotnet_naming_rule.private_fields_should_be_underscore_pascal.severity = suggestion
dotnet_naming_rule.private_fields_should_be_underscore_pascal.symbols = private_fields
dotnet_naming_rule.private_fields_should_be_underscore_pascal.style = underscore_pascal_case_style

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_fields.required_modifiers = 

dotnet_naming_style.underscore_pascal_case_style.capitalization = pascal_case
dotnet_naming_style.underscore_pascal_case_style.required_prefix = _

# Naming rule for public members: PascalCase
dotnet_naming_rule.public_members_should_be_pascal.severity = suggestion
dotnet_naming_rule.public_members_should_be_pascal.symbols = public_members
dotnet_naming_rule.public_members_should_be_pascal.style = pascal_case_style

dotnet_naming_symbols.public_members.applicable_accessibilities = public
dotnet_naming_symbols.public_members.applicable_kinds = property, field, method, event
dotnet_naming_symbols.public_members.required_modifiers = 

dotnet_naming_style.pascal_case_style.capitalization = pascal_case